<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Satay wraps</th>
      <th>Pad thai chicken</th>
      <th>Pad thai beef</th>
      <th>Pad thai shrimp</th>
      <th>Garlic noodles chicken</th>
      <th>Garlic noodles beef</th>
      <th>Garlic noodles chicken</th>
      <th>Garlic noodles shrimp</th>
      <th>Notes</th>
      <th>Email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.Satay_Wraps %></td>
        <td><%= order.Pad_Thai_Chicken %></td>
        <td><%= order.Pad_Thai_Beef %></td>
        <td><%= order.Pad_Thai_Shrimp %></td>
        <td><%= order.Garlic_Noodles_Chicken %></td>
        <td><%= order.Garlic_Noodles_Beef %></td>
        <td><%= order.Garlic_Noodles_Chicken %></td>
        <td><%= order.Garlic_Noodles_Shrimp %></td>
        <td><%= order.Notes %></td>
        <td><%= order.email %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

